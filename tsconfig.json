{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./server/dist",
      "rootDir": "./server/src",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "typeRoots": ["./server/node_modules/@types", "./server/src/types"]
    }
}